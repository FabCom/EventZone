<div class="card text-center">
  <div class="card-header">
    <h3>PROFIL</h3>
  </div>
  <div class="card-body">
    <h5 class="card-title"><strong><%= @user.first_name %> <%= @user.last_name %></strong></h5>
    <p><%= @user.email %></p>
    <p class="card-text"><%= @user.description %></p>
    <%= link_to 'Edit', edit_user_registration_path(@user), class: "btn btn-primary" %>
  </div>
  <div class="card-footer text-muted">
    Profil créé le <%= @user.created_at.strftime("%d/%m/%Y") %>
  </div>
</div>

<%= render "events/list" %>
