<div class="card text-center">
  <div class="card-header">
    <h3>ÉVÉNEMENT</h3>
  </div>
  <div class="card-body d-flex justify-content-between flex-column">
    <h5 class="d-flex flex-column"><span class="badge bg-secondary"><%= @event.location %></span></h5>
    <h3 class="card-title d-flex justify-content-center"><%= @event.title %></h3>
    <p class="fst-italic">Événement créé par <%= @event.administrator.email %></p>
    <h5 class="d-flex justify-content-between"><span class="badge rounded-pill bg-success"><%= @event.participants.length %> participants</span><span class="badge rounded-pill bg-secondary"><%= @event.price %>€</span></h5>
    <!--<p class="card-text"><%= @event.description %></p>-->
    <p><%= @event.description %></p>
    <%= if current_user == @event.administrator then link_to 'ÉDITER', edit_event_path, class: "btn btn-primary" end %>
    <%= unless current_user == @event.administrator then link_to "PARTICIPER", @event, class: "btn btn-primary" end %>
    <div class="card-footer text-muted">
    <h2 class="card-title d-flex justify-content-center fst-italic"><%= @event.start_date.strftime("%d/%m/%Y") %></h2>
    </div>
  </div>
</div>
